#!/bin/bash

data_dir="pokemon_data"
output_file="pokemon_report.csv"

# CSV Header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Loop through all JSON files
for file in "$data_dir"/*.json; do
    # Extract values using jq
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}')
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}')

    # Append to CSV
    echo "$name,$height,$weight" >> "$output_file"
done

echo "CSV Report generated at: $output_file"
echo
cat "$output_file"
echo

# Calculate averages using AWK
awk -F',' 'NR>1 { h+=$2; w+=$3; count++ }
END {
    printf "Average Height: %.2f m\n", h/count
    printf "Average Weight: %.2f kg\n", w/count
}' "$output_file"

